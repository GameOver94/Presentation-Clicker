{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

        {
            "name": "Debug Client as Module",
            "type": "debugpy",
            "request": "launch",
            "module": "presentation_clicker_client.ui_client",
            "justMyCode": true,
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
            // "args": ["--theme", "darkly"]
        },
        {
            "name": "Debug Listener as Module",
            "type": "debugpy",
            "request": "launch",
            "module": "presentation_clicker_listener.ui_server",
            "justMyCode": true,
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
            // "args": ["--theme", "darkly"]
        },
        {
            "name": "Debug Client Script Directly",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/presentation_clicker_client/presentation_clicker_client/ui_client.py",
            "justMyCode": true,
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Debug Listener Script Directly",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/presentation_clicker_listener/presentation_clicker_listener/ui_server.py",
            "justMyCode": true,
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}