    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Client",
            "type": "debugpy",
            "request": "launch",
            "module": "presentation_clicker.cli",
            "args": ["client"],
            "justMyCode": true,
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
            // "args": ["client", "--theme", "darkly"]
        },
        {
            "name": "Debug Server",
            "type": "debugpy",
            "request": "launch",
            "module": "presentation_clicker.cli",
            "args": ["server"],
            "justMyCode": true,
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
            // "args": ["server", "--theme", "darkly"]
        },
        {
            "name": "Debug Client Module Directly",
            "type": "debugpy",
            "request": "launch",
            "module": "presentation_clicker.client.ui_client",
            "justMyCode": true,
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        },
        {
            "name": "Debug Server Module Directly",
            "type": "debugpy",
            "request": "launch",
            "module": "presentation_clicker.server.ui_server",
            "justMyCode": true,
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        },
        {
            "name": "Debug Client Script Directly",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/presentation_clicker/client/ui_client.py",
            "justMyCode": true,
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        },
        {
            "name": "Debug Server Script Directly",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/presentation_clicker/server/ui_server.py",
            "justMyCode": true,
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        }
    ]
}