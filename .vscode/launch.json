    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/ui_client.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Run Client as Module",
            "type": "python",
            "request": "launch",
            "module": "presentation_clicker_client.ui_client",
            "justMyCode": true,
            "cwd": "${workspaceFolder}/presentation_clicker_client",
            // "args": ["--open-config-dir"]
        },
        {
            "name": "Run Listener as Module",
            "type": "python",
            "request": "launch",
            "module": "presentation_clicker_listener.ui_server",
            "justMyCode": true,
            "cwd": "${workspaceFolder}/presentation_clicker_listener"
        }
    ]
}