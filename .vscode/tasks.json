{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Client",
            "type": "shell",
            "command": "python",
            "args": ["-m", "presentation_clicker.cli", "client"],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": []
        },
        {
            "label": "Run Server",
            "type": "shell",
            "command": "python",
            "args": ["-m", "presentation_clicker.cli", "server"],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": []
        }
    ]
}
